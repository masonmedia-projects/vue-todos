der-radius: 10px 0 0 10px;\" \n        :disabled=\"newTask.length == 0\"\n        @click=\"addTask\">Add</b-button>\n        <!-- </b-col> -->\n        <b-col sm=\"11\" class=\"pl-0 rounded-0\">\n          <input v-model=\"newTask\" placeholder=\"Add new todo\" class=\"p-2 w-100 rounded-right border border-light\"\n            v-on:keyup.enter=\"addTask\" />\n        </b-col>\n      </b-row>\n    </b-jumbotron>\n\n    <b-row class=\"my-1 mx-0 p-0 rounded-lg shadow\">\n      <b-col lg=\"12\" class=\"text-dark px-0\">\n        <b-list-group>\n          <b-list-group-item v-for=\"(task, index) in tasks\" :key=\"index\"\n            :class=\"{ completed : task.completed }\" \n            class=\"d-flex justify-content-start align-items-center p-0\">\n            <div class=\"p-3\">\n              <span>{{ task.name }}</span>\n            </div>\n            <b-button class=\"ml-auto p-3 rounded-0\">\n              <b-icon icon=\"check\" font-scale=\"1.5\"></b-icon>\n            </b-button>\n            <b-button class=\"p-3 rounded-0\">\n              <b-icon icon=\"x\" font-scale=\"1.5\"></b-icon>\n            </b-button>\n          </b-list-group-item>\n        </b-list-group>\n      </b-col>\n    </b-row>\n  </b-container>\n</template>\n\n\n<script>\n  // @ is an alias to /src\n  export default {\n    name: 'Home',\n    data() {\n      return {\n        tasks: [{\n            id: 1,\n            name: 'Clean the fridge'\n          },\n          {\n            id: 2,\n            name: 'Walk the dogs'\n          },\n        ],\n        newTask: '',\n        completedClass: null,\n      }\n    },\n    methods: {\n      addTask() {\n        // if(this.newTask.length > 0) {\n        //   this.tasks.push(this.newTask);\n        //   console.log(this.tasks)\n        //   this.newTask = ''\n        // }\n        this.tasks.push({\n          id: this.tasks.length + 1,\n          name: this.newTask,\n          completed: false\n        });\n        this.newTask = ''\n      }\n    }\n  }\n</script>\n\n<style lang=\"sass\" scoped>\n/* .completed {} */\n\n.list-group-item.completed {\n  @extend .bg-success;\n}\n</style>"]}]}